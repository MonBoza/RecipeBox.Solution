@using RecipeBox.Models;
@using System.Collections.Generic;


@model dynamic

<h2>Search Results</h2>

@if (Model is List<Recipe>)
{
    var recipes = (List<Recipe>)Model;
    if (recipes.Any())
    {
        foreach (var recipe in recipes)
        {
            <h3>@Html.ActionLink(recipe.RecipeName, "Details", "Recipes", new { id = recipe.RecipeId })</h3>
        }
    }
    else
    {
        <p>No Recipe results found.</p>
    }
}
else if (Model is List<Tag>)
{
    var tags = (List<Tag>)Model;
    if (tags.Any())
    {
        foreach (var tag in tags)
        {
            <h3>@Html.ActionLink(tag.TagName, "Details", "Tags", new { id = tag.TagId })</h3>
        }
    }
    else
    {
        <p>No tags found.</p>
    }
}
else
{
    <p>No results found.</p>
}