@using RecipeBox.ViewModels;
@using RecipeBox.Models;
@using System.Security.Claims;

<h2>Your Account Details:</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <p>Welcome, @User.FindFirst(ClaimTypes.NameIdentifier)!</p>

  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-default" value="Log out" />
  }
}
else
{
  <h4>You're currently logged out. Log back in to see account details.</h4>
  <button>@Html.ActionLink("Register", "Register")</button>
  <button>@Html.ActionLink("Log in", "Login")</button>
}
<button>@Html.ActionLink("Home", "Index", "Home")</button>
